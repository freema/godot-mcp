{
  "name": "@satelliteoflove/godot-mcp",
  "version": "2.13.0",
  "description": "MCP server for Godot Engine integration",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "godot-mcp": "./dist/cli.js"
  },
  "files": [
    "dist",
    "README.md",
    "addon"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/satelliteoflove/godot-mcp.git"
  },
  "bugs": {
    "url": "https://github.com/satelliteoflove/godot-mcp/issues"
  },
  "homepage": "https://github.com/satelliteoflove/godot-mcp#readme",
  "scripts": {
    "build": "tsc && npm run copy-addon",
    "copy-addon": "rm -rf addon && cp -r ../godot/addons/godot_mcp addon",
    "start": "node dist/index.js",
    "cli": "node dist/cli.js",
    "dev": "tsc --watch",
    "dev:cli": "nodemon --exec 'tsx src/cli.ts' --ext ts --watch src",
    "test": "vitest run",
    "test:watch": "vitest",
    "generate-docs": "tsx scripts/generate-docs.ts"
  },
  "keywords": [
    "godot",
    "mcp",
    "model-context-protocol",
    "ai",
    "game-development"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.0",
    "ws": "^8.18.0",
    "zod": "^3.23.0",
    "zod-to-json-schema": "^3.23.0"
  },
  "devDependencies": {
    "@types/node": "^22.0.0",
    "@types/ws": "^8.5.0",
    "nodemon": "^3.1.11",
    "tsx": "^4.21.0",
    "typescript": "^5.6.0",
    "vitest": "^4.0.16"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
